<div class="col-lg-12">
  <h1><%= @item.title %></h1>
  <p>カテゴリ：<%= @item.category %></p>
  <p>投稿日：<%= @item.created_at %></p>
  <hr>
  <p>
    <%= simple_format(@item.body) %>
  </p>
  <hr>
  <a href="/items/<%= @item.id %>/edit" class="btn btn-default">編集する</a>
  <%= link_to '編集する', edit_item_path %>
  <%= link_to '削除する', item_path, method: :delete %>
</div>
